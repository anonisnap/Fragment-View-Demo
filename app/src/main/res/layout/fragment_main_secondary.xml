<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android = "http://schemas.android.com/apk/res/android"
												   xmlns:app = "http://schemas.android.com/apk/res-auto"
												   xmlns:tools = "http://schemas.android.com/tools"
												   android:layout_width = "match_parent"
												   android:layout_height = "match_parent"
												   tools:context = ".ui.page_two.SecondaryMainFragment">

	<TextView
			android:id = "@+id/text_header_secondary"
			android:layout_width = "match_parent"
			android:layout_height = "wrap_content"
			android:layout_marginStart = "8dp"
			android:layout_marginTop = "8dp"
			android:layout_marginEnd = "8dp"
			android:textAlignment = "center"
			android:textSize = "20sp"
			app:layout_constraintEnd_toEndOf = "parent"
			app:layout_constraintStart_toStartOf = "parent"
			app:layout_constraintTop_toTopOf = "parent"
			app:layout_constraintBottom_toBottomOf = "parent" />

	<EditText
			android:id="@+id/number_field"
			android:layout_width = "wrap_content"
			android:layout_height = "wrap_content"
			app:layout_constraintEnd_toEndOf = "parent"
			app:layout_constraintStart_toStartOf = "parent"
			app:layout_constraintTop_toBottomOf = "@id/text_header_secondary"
			app:layout_constraintBottom_toTopOf = "@id/navigate_to_sub_page"
			android:hint = "Input a Number"
			android:singleLine = "true"
			android:inputType = "number"
			android:gravity="center"/>

	<Button
			android:id = "@+id/navigate_to_sub_page"
			android:layout_width = "wrap_content"
			android:layout_height = "wrap_content"
			android:text = "@string/navigate_to_sub_page"
			app:layout_constraintBottom_toBottomOf = "parent"
			app:layout_constraintTop_toBottomOf = "@id/text_header_secondary"
			app:layout_constraintStart_toStartOf = "parent"
			app:layout_constraintEnd_toEndOf = "parent" />
</androidx.constraintlayout.widget.ConstraintLayout>